<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/song_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:padding="10dp"
    android:background="?android:attr/selectableItemBackground">
    
    <ImageView
        android:id="@+id/song_item_album_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/song_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <TextView
        android:id="@+id/song_item_song_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Song Title"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/song_item_album_image"
        app:layout_constraintTop_toTopOf="@+id/song_item_album_image" />
    
    <TextView
        android:id="@+id/song_item_song_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Song Details"
        app:layout_constraintStart_toEndOf="@id/song_item_album_image"
        app:layout_constraintTop_toBottomOf="@+id/song_item_song_title" />

</androidx.constraintlayout.widget.ConstraintLayout>